<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<property name="LOG_PATH" value="B:/logback" />
	<!-- <timestamp key="bySecond" datePattern="yyyyMMdd.HHmmss" /> -->
 	<springProperty scope="context" name="springAppName" source="spring.application.name"/>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>			
			<Pattern>[%d{yyyy-MM-dd HH:mm:ss}] ${HOSTNAME} [%thread] %-5level %logger{36}.%M - %X{mdcData} [${springAppName} %X{X-B3-TraceId:-} %X{X-B3-SpanId:-} %X{X-Span-Export:-}] %X{user} %m \(%c{0}\)%n</Pattern>
		</encoder>
	</appender>
	
	<appender name="STASH" class="ch.qos.logback.core.rolling.RollingFileAppender">
	    <file>${LOG_PATH}/studentservice.log</file>	   
	    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>${LOG_PATH}/studentservice.%d{yyyy-MM-dd}.log</fileNamePattern>           
            <maxHistory>7</maxHistory>
        </rollingPolicy>  
	    <encoder class="net.logstash.logback.encoder.LogstashEncoder" />	   
	</appender>
	
